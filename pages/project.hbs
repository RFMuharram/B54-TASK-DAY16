<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{data.tittle}}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    {{!-- <link rel="stylesheet" href="./CSS/main.css" />
    <link rel="stylesheet" href="./CSS/myproject.css" />
    <link rel="stylesheet" href="../assets/CSS/bigcontent.css" /> --}}
     <style>
      body {
        background-color: #8d6e63;
      }
      .nav-link {
        color: #7b3535;
        font-family: copperplate;
      }
      .nav-link:hover {
        color: #e5b579;
      }
      .active {
        color: orange !important;
      }
      .btn.btn-success {
        color: bisque;
        background-color: #7b3535;
        border-color: #7b3535;
      }
      .btn.btn-success:hover {
        color: #7b3535 !important;
        background-color: #8d6e63 !important;
        border-color: #7b3535;
      }
      .btn.btn-success:active {
        color: #7b3535;
        background-color: bisque;
        border-color: #7b3535;
      }
      #btn-edit:hover {
        color: #e5b579 !important;
      }
      #btn-delete:hover {
        color: red !important;
      }

      @media only screen and (max-width: 1000px) {
        #wrapper {
          flex-direction: column !important;
          padding: 20px;
        }
        #content-right {
          width: 75% !important;
          margin: auto !important;
          margin-bottom: 30px !important;
        }
        #content-left {
          width: 75% !important;
          margin: auto !important;
          margin-bottom: 30px !important;
        }
      }
    </style>
  </head>
  <body>
 <!-- NAVBAR -->
    <nav
      class="navbar navbar-expand-lg bg-body-tertiary"
      style="background-color: bisque !important"
    >
      <div class="container-fluid">
        <a href="/index"
          ><img
            src="../assets/img/logo-brand.png"
            alt="logo-brand"
            class="logo-brand"
            style="margin-right: 10px"
        /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
          style="background-color: #7b3535"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link"
                aria-current="page"
                href="/index"
                >Home</a
              >
            </li>
         {{#if loggedIn}}
            <li class="nav-item">
              <a class="nav-link" href="/addProjectBootstrap"
                >Add project
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/testi">Testimonials</a>
            </li>
            {{/if}}
          </ul>
          {{#unless loggedIn}}
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link"
                aria-current="page"
                href="/register"
                >Register</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login"
                >Login
              </a>
            </li>
          </ul>
          {{/unless}}
           {{#if loggedIn}}
            <form method="post" action="/logOut" class="d-flex mx-1" role="search">
            <button class="btn btn-warning" type="submit">
              <a
                class="nav-link"
                style=style="color: #7b3535; font-family: copperplate;"
                >log out</a
              >
            </button>
          </form>
            {{/if}}
          <form class="d-flex" role="search">
            <button class="btn btn-success" type="submit">
              <a
                class="nav-link"
                href="/backpageBootstrap"
                style="color: bisque"
                >Contact Me</a
              >
            </button>
          </form>
        </div>
      </div>
    </nav>
    <!-- NAVBAR -->
    <!-- BIG CONTENT -->
    <div class="header w-100 mt-5 justify-content-center">
      <h1 class="title text-center" style="color: bisque;
  font-family: copperplate;">{{data.tittle}}</h1>
    </div>
    <div class="upper-content d-flex flex-column justify-content-center w-100 p-5">
      <div class="upper-left w-100 mx-auto">
        <img
          class="upper-foto w-100"
          src="{{data.image}}"
          alt="ini foto content"
        />
      </div>
      <div class="w-100 mt-4 justify-content-center">
      <p class="fw-bold" style="color:#7b3535; text-align: justify;">
        {{data.content}}</p>
    </div>
    <div class="upper-right mt-1">
        <div class="main1">
          <div class="satu-2 d-flex justify-content-start align-items-center">
            <div>
            <h5 style="color:#AAB1B6;">{{data.createdAt}}</h5>
            </div>
          </div>
        </div>
      </div>
    </div>
<!-- BIG CONTENT -->
<script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
